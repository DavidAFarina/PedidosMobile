<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="28dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:background="@drawable/borda_vermelha">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mesa: "
            style="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/txtMesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            style="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Garçom: "
            style="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/txtGarcom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            style="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:background="@drawable/borda_vermelha">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza: "
            style="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/txtPizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            style="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/definirTamanho"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rgTamanho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rdbPequena"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pequena" />

                <RadioButton
                    android:id="@+id/rdbMedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Média" />

                <RadioButton
                    android:id="@+id/rdbGrande"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grande" />
        </RadioGroup>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtValorP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3pt"
                android:text="preço P"
                />
            <TextView
                android:id="@+id/txtValorM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3pt"
                android:text="preço M"
                />
            <TextView
                android:id="@+id/txtValorG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3pt"
                android:text="preço G"
               />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>