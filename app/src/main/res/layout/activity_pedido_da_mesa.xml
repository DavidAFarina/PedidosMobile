<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PedidoDaMesaActivity"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:background="@android:color/holo_red_dark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnPizzas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Pizzas"
            android:onClick="abrirListaPizzas"
            />
        <Button
            android:id="@+id/btnPorcoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Porções"
            android:textSize="20sp"
            android:onClick="abrirListaPorcoes"/>
        <Button
            android:id="@+id/btnBebidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bebidas"
            android:textSize="20sp"
            android:onClick="abrirListaBebidas"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="#E0FFFF">

        <ListView
            android:id="@+id/lista"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom">


        <Button
            android:id="@+id/btnConsultarFatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultar Fatura"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/btnPagarParcial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pagar Parcial"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/btnFecharFatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fechar Fatura"
            android:textSize="10sp"/>


    </LinearLayout>


</LinearLayout>